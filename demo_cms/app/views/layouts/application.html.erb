<!DOCTYPE html>
<html>
<head>
  <title>DemoCms</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h3 class="logo"><%= link_to 'Demo CMS', root_url %></h3>
    <nav>
    <% if user_signed_in? %>
      <strong><%= current_user.email %></strong> (<%= current_user.role %>)
      <%= link_to 'Signout', destroy_user_session_path, method: :delete %> | 
    <% else %>
      <%= link_to 'Signup', new_user_registration_path %> | 
      <%= link_to 'Signin', new_user_session_path %> | 
    <% end %>
      <%= link_to 'Topics', topics_path %>
    </nav>
  </header>

  <%= content_tag :p, alert, class: 'alert' if alert %>
  <%= content_tag :p, notice, class: 'notice' if notice %>

  <section>
    <%= yield %>
  </section>
</body>
</html>
